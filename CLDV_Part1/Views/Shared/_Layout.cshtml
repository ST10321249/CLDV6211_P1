<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CLDV_Part1.styles.css" asp-append-version="true" />

    <style>
        
        body {
            background-color: #F8F9FA;
            color: #212529;
            font-family: 'Segoe UI', sans-serif;
        }

       
        h1, h2, h3, h4, h5, h6 {
            color: #005792;
        }

        
        a, a:visited {
            color: #00A6A6;
            text-decoration: none;
        }

            a:hover {
                color: #017B92;
                text-decoration: underline;
            }

        
        .navbar {
            background-color: #005792;
        }

        .navbar-brand, .nav-link {
            color: #FFFFFF !important;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #E1F5F5 !important;
            }

       
        .table {
            background-color: #FFFFFF;
            color: #212529;
            border-radius: 10px;
        }

            .table th {
                background-color: #017B92;
                color: #FFFFFF;
            }

            .table td {
                border-color: #DEE2E6;
            }

        
        .form-control {
            background-color: #FFFFFF;
            color: #212529;
            border: 1px solid #017B92;
        }

        
        footer {
            background-color: #005792;
            color: #FFFFFF;
        }

            footer a {
                color: #E1F5F5;
            }

                footer a:hover {
                    color: #BCE0DF;
                }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EventEase</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Venues" asp-action="Index">Venues</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Events" asp-action="Index">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Bookings" asp-action="Index">Bookings</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EventEase
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
